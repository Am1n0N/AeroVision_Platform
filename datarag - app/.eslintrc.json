{
 "root": true,
  "extends": ["next/core-web-vitals", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    // Treat unused as error, but allow underscored names to be intentionally unused
    "@typescript-eslint/no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_"
    }],

    // Keep as warnings for now (you can tighten later)
    "@typescript-eslint/no-explicit-any": ["warn", { "fixToUnknown": true, "ignoreRestArgs": true }],
    "react/no-unescaped-entities": "warn", // weâ€™ll also show how to fix the line
    "import/no-anonymous-default-export": "warn"
  },
  "ignorePatterns": ["dist", "build", ".next", "coverage"],
  "overrides": [
    // If you want to be lenient on API boundaries:
    {
      "files": ["app/api/**"],
      "rules": { "@typescript-eslint/no-explicit-any": "off" }
    }
  ]
}
