# AirportRAG Environment Variables Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL database connection string
# Format: mysql://USERNAME:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL="mysql://user:password@localhost:3306/airport_rag"

# =============================================================================
# AUTHENTICATION (CLERK)
# =============================================================================
# Get these from your Clerk dashboard at https://clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
CLERK_SECRET_KEY="sk_test_your_secret_key_here"

# =============================================================================
# AI SERVICES
# =============================================================================
# Groq API Key (Primary AI provider)
# Get from: https://console.groq.com/keys
GROQ_API_KEY="gsk_your_groq_api_key_here"

# Ollama Base URL (Local AI models)
# Default: http://localhost:11434 (if running Ollama locally)
OLLAMA_BASE_URL="http://localhost:11434"

# OpenAI API Key (Optional)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your_openai_api_key_here"

# =============================================================================
# VECTOR DATABASE (PINECONE)
# =============================================================================
# Pinecone configuration for vector embeddings
# Get from: https://app.pinecone.io/
PINECONE_API_KEY="your_pinecone_api_key_here"
PINECONE_INDEX="airport-rag"
PINECONE_ENVIRONMENT="us-east-1"

# =============================================================================
# CACHE & STORAGE (UPSTASH)
# =============================================================================
# Upstash Redis for caching and rate limiting
# Get from: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token_here"

# EdgeStore for file storage
# Get from: https://dashboard.edgestore.dev/
EDGE_STORE_ACCESS_KEY="your_edgestore_access_key"
EDGE_STORE_SECRET_KEY="your_edgestore_secret_key"

# =============================================================================
# DEVELOPMENT & DEBUGGING (OPTIONAL)
# =============================================================================
# Environment mode
NODE_ENV="development"

# Debug flags for development
AGENT_DEBUG="true"
SQL_TOOL_DEBUG="true"

# =============================================================================
# ADDITIONAL CONFIGURATION (OPTIONAL)
# =============================================================================
# Custom configurations can be added here as needed
# CUSTOM_MODEL_ENDPOINT="https://your-custom-endpoint.com"
# MAX_UPLOAD_SIZE="10MB"
# SESSION_TIMEOUT="3600"
